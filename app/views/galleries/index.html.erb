<% include_stylesheet 'admin/gallery/gallery' -%>
<% include_javascript 'lite_sortable' -%> 
<% include_javascript 'gallery' -%> 
<h1>Galleries</h1>

<table id="gallery_tree" class="index" cellpadding="0" cellspacing="0" border="0">
  <thead>
    <tr>      
			<th class="gallery">Name</th>
      <th>ID</th>
			<th class="status">Status</th>
      <th class="modify" colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody id="galleries_list">
<% if @galleries.size > 0 -%>
	<%= render :partial => 'gallery', :collection => @galleries %>
<% else -%>
  <tr>
    <td colspan="6" class="note">No Galleries</td>
  </tr>
<% end -%>
  </tbody>
</table>
<p>
  <%= link_to image('gallery/new-gallery.png', :alt => 'New Gallery'), new_admin_gallery_path %>
</p>